  BIND_LISTENON
  BIND_LISTENONPORTV6
  BIND_LISTENONV6
  BIND_VERSION
)

echo -n "==> Setting configurations vars ... "
for c in ${CONFIGS_VARS[@]}
do
  if [[ $(eval echo \$${c}) ]]; then
    sed -i "s,@@${c}@@,$(eval echo \$${c})," /etc/bind/rndc.key
    sed -i "s,@@${c}@@,$(eval echo \$${c})," /etc/bind/named.conf.options
  else
    sed -i "/${c}/d" /etc/bind/named.conf.options
  fi
done
echo "Done"

cat /etc/bind/named.conf.options

echo "==> Starting bind9"
named -g -u bind -c /etc/bind/named.conf
