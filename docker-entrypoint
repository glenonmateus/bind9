: ${BIND_NTARECHECK:="5"}
: ${BIND_MAXZONETTL:="0"}
: ${BIND_SERIALUPDATEMETHOD:="increment"}
: ${BIND_ZONESTATISTICS:="terse"}
# Boolean Options
: ${BIND_AUTOMATICINTERFACESCAN:="yes"}
: ${BIND_ALLOWNEWZONES:="no"}
: ${BIND_AUTHNXDOMAIN:="no"}
: ${BIND_MEMSTATISTICS:="no"}
: ${BIND_DIALUP:="no"}
: ${BIND_FLUSHZONESONSHUTDOWN:="no"}
: ${BIND_GEOIPUSEECS:="yes"}
: ${BIND_ROOTKEYSENTINEL:="yes"}
: ${BIND_MESSAGECOMPRESSION:="yes"}
: ${BIND_MINIMALRESPONSES:="no"}
: ${BIND_MINIMALANY:="no"}
: ${BIND_NOTIFY:="yes"}
: ${BIND_NOTIFYTOSOA:="yes"}
: ${BIND_RECURSION:="yes"}
: ${BIND_REQUESTNSID:="no"}
: ${BIND_REQUIRESERVERCOOKIE:="no"}
: ${BIND_ANSWERCOOKIE:="yes"}
: ${BIND_SENDCOOKIE:="yes"}
: ${BIND_NOCOOKIEUDPSIZE:="4096"}
: ${BIND_COOKIEALGORITHM:="aes"}
: ${BIND_COOKIESECRET:="yes"}
: ${BIND_TRUSTANCHORTELEMETRY:="yes"}
: ${BIND_PROVIDEIXFR:=""}
: ${BIND_REQUESTIXFR:=""}
